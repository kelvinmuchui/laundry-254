<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bbck"
    android:layout_height="match_parent"
    tools:context=".RejectedOrders">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_orders_yet"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/noordersrej"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:lottie_rawRes="@raw/laundry"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/rejectedlottie"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rejectedordersrecyclerview"
        android:layout_marginTop="?attr/actionBarSize"
        >
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>