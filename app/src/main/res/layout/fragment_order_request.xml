<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/bbck"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".user.fragments.OrderRequest">

    <RelativeLayout
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/clothdetails"
                android:visibility="gone"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Name of the Cloth"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="1.Shirts/T-Shirts/Kurtas"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="2.Pent/Jeans/Dhoti/Lungi"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="3.Bed Sheet"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="4.Saree"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:text="5.Coat or Blazer(Dry Clean)"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="13dp"
                    android:singleLine="true"
                    android:text="6.Blanket"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="6.Socks(Pair)/Handkerchief"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="7.Sweater/Hoodies/SweatShirts"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="8.Ladies Suit"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="9.Under garments(Any)"
                    android:textColor="#000"
                    android:textSize="15dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2.5"
                android:visibility="gone"
                android:id="@+id/quantitydetails"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:text="Quantity"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/shirt"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/jeans"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/bedsheet"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/saree"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/coat"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/blanket"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/socks"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/sweater"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/ladiessuit"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/undergarments"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/pricedetails"
                android:visibility="gone"
                android:layout_weight="1.5"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/jeansprice"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Rs.7"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/bedsheetprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Rs.10"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/sareeprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Rs.20"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/coatprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Rs.50"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/blanketprice"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Rs.200"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/socksprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Rs.2"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/sweaterprice"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Rs.10"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/ladiessuitprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Rs.10"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/undergarmentsprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Rs.3"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/shirtprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Rs.5"
                    android:textColor="#000"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:text="Add More"
            android:textColor="#000"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tt"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="10."
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="11."
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="12."
                    android:textColor="#000"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:layout_weight="5.5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/other1name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:singleLine="true" />


                <EditText
                    android:id="@+id/other2name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:singleLine="true" />


                <EditText
                    android:id="@+id/other3name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:singleLine="true" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/other1"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/other2"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/other3"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextview"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:singleLine="true" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/proceed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:layout_marginBottom="30dp"
            android:background="@drawable/buttonview"
            android:text="Proceed"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>