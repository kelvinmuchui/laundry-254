<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.banice.laundry254">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.banice.laundry254.Splash"
            android:theme="@style/NoBar">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name="com.example.banice.laundry254.NoInternet" />
        <activity android:name="com.example.banice.laundry254.ForgotPassword" />
        <activity android:name="com.example.banice.laundry254.ViewCompleted" />
        <activity android:name="com.example.banice.laundry254.ViewRejected" />
        <activity android:name="com.example.banice.laundry254.Order_details_request" />
        <activity android:name="com.example.banice.laundry254.EmailVerification" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.example.banice.laundry254.Main"
            android:theme="@style/NoBar" />
        <activity
            android:name="com.example.banice.laundry254.newaccount"
            android:theme="@style/NoBar"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan"
            />
        <activity
            android:name="com.example.banice.laundry254.user.The_user_profile"
            android:label="@string/title_activity_the_user_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.banice.laundry254.user.editprofile" />
        <activity android:name="com.example.banice.laundry254.user.myorders" />
        <activity android:name="com.example.banice.laundry254.user.editpassword" />
        <activity android:name="com.example.banice.laundry254.user.Order_click_details" />
        <activity
            android:name="com.example.banice.laundry254.Launcher"
            android:theme="@style/NoBar">

        </activity>

        <service android:name="com.example.banice.laundry254.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
    </application>

</manifest>